      {{#index-services-slides}}
      <div class="services__slide pb-5">
        <div class="container no-gutter-on-sm">
          <div class="row position-relative">
            <div class="col-12 col-lg-8 offset-lg-4">
              <div class="services__photo" style="background-image: url(assets/img/{{photo-name}})"></div>
            </div>
            <div class="col-12 col-lg-5 pt-0 pt-lg-4 services__descr">
