    <div class="row justify-content-center">
      <div class="col-12 col-lg-8 col-xl-6">
        <div class="mb-4 mb-lg-2 pl-2 text-center text-lg-left" data-aos="fade-right">
          <h2>Відгуки клієнтів</h2>
        </div>
      </div>
    </div>
  </div>
  <div class="reviews">
