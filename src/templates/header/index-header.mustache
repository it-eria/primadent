{{#header}}
<header class="header">
  <div class="container">
    <div class="row align-items-center">
      <!-- Language select for large screens-->
      <div class="col-2">
        <ul class="header__languages d-none d-lg-block">
          <li>
            {{current-lang}}
            <ul>
              {{#language-items}}
                <li>
                  <a href="#">
                    {{language}}
                  </a>
                </li>
              {{/language-items}}
            </ul>
          </li>
        </ul>
        <a href="#" class="btn btn_burger d-block d-lg-none">
          <span></span>
        </a>
      </div>
      <!-- /Language select -->
      <!-- Main navigation -->
      <div class="col-12 col-lg-8 order-2 order-lg-1">
        <nav class="header__main-nav d-flex justify-content-center">
          <ul>
            {{#main-nav-items}}
            <li>
              <a href="#">{{item}}</a>
            </li>
            {{/main-nav-items}}
          </ul>
        </nav>
        <!-- Register button for mobile screen -->
        <div class="mob-register-btn">
          <a href="#" class="btn btn_red d-block d-lg-none">Записатись</a>
        </div>
        <!-- /Register button for mobile screen -->
        <!-- Languages for mobile screens -->
        <ul class="header__languages d-block d-lg-none">
          <li>
            <span>
              {{current-lang}}
            </span>
            <ul>
              {{#language-items}}
                <li>
                  <a href="#">
                    {{language}}
                  </a>
                </li>
              {{/language-items}}
            </ul>
          </li>
        </ul>
        <!-- /Languages for mobile screens -->
      </div>
      <!-- /Main navigation -->
      <!-- To be registered -->
      <div class="col-10 col-lg-2 order-1 order-lg-2 text-right">
        <div class="w-100 justify-content-between align-items-center d-flex d-lg-none">
          <div></div>
          <a href="#" class="mob-logo d-block">
            <img src="assets/img/logo.png" alt="logo" class="img-fluid">
          </a>
          <ul class="header__socials d-block">
            <li>
              <a href="#">
                <i class="icon icon-facebook-outline"></i>
              </a>
            </li>
            <li>
              <a href="#">
                <i class="icon icon-insta-outline"></i>
              </a>
            </li>
          </ul>
        </div>
        <a href="#" class="btn btn_red d-none d-lg-block">Записатись</a>
      </div>
      <!-- /To be registered -->
    </div>
  </div>
</header>
{{/header}}